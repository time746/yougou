.goods-info {
  display: flex;
  border-bottom: 2rpx solid #eee;
}
.goods-info navigator {
  flex: 3;
}
.goods-info navigator image {
  width: 100%;
}
.goods-info .text {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 0 20rpx 20rpx;
}
.goods-info .text .brand {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-info .text .price {
  color: var(--themeColor);
}

.swiper {
  height: 340rpx;
}
.swiper image {
  width: 100%;
}
.index-cate {
  display: flex;
  padding: 16rpx 0;
}
.index-cate navigator {
  flex: 1;
  display: flex;
  justify-content: center;
}
.index-cate navigator image {
  width: 80%;
}
.index-products {
  margin-top: 20rpx;
}
.index-products .product-image {
  float: left;
  width: 33.333vw;
  height: 45.62602128vw;
  padding: 5rpx;
}
.index-products .product-image:nth-last-child(-n + 4) {
  height: 22.81301064vw;
}
.index-products .product-image image {
  width: 100%;
  height: 100%;
}
